@model ErrorViewModel
@{
    ViewData["Title"] = "403 Forbidden";
    Layout = "_Layout"; // Use your layout file if you have one
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 text-danger mb-4">
                <i class="fas fa-ban"></i> @ViewData["Title"]
            </h1>
            <div class="alert alert-danger">
                <h2>Access Denied</h2>
                <p class="lead">You don't have permission to access this resource.</p>
                
                @if (!string.IsNullOrEmpty(Model.Path))
                {
                    <p><strong>Requested path:</strong> @Model.Path</p>
                }
                
                @if (Model.ShowRequestId)
                {
                    <p class="small text-muted">Request ID: @Model.RequestId</p>
                }
            </div>
            
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="fas fa-home"></i> Return to Home
                </a>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-secondary ml-2">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="btn btn-success ml-2">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                }
            </div>
        </div>
    </div>
</div>