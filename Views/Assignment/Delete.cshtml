@model Myportal.Models.Assignment
@{
    ViewData["Title"] = "Delete Assignment";
}

<h2>Delete Assignment</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this assignment?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Asset</dt>
            <dd class="col-sm-9">@Model.Asset?.Name</dd>

            <dt class="col-sm-3">Employee</dt>
            <dd class="col-sm-9">@Model.Employee?.FullName</dd>

            <dt class="col-sm-3">Assigned Date</dt>
            <dd class="col-sm-9">@Model.AssignedDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Return Date</dt>
            <dd class="col-sm-9">@Model.ReturnDate?.ToShortDateString() ?? "-"</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
