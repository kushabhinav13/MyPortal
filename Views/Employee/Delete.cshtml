@model Myportal.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Confirmation</h2>

<h4>Are you sure you want to delete this employee?</h4>
<hr />

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Department:</strong> @Model.Department</p>
        <p><strong>Hire Date:</strong> @Model.HireDate.ToShortDateString()</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>